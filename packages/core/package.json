{
  "name": "@inpageedit/core",
  "version": "0.15.0",
  "description": "ðŸš€ Modular, Extensible Supercharged Plugin for MediaWiki",
  "author": "dragon-fish",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./style.css": "./dist/style.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./InPageEdit": {
      "types": "./dist/InPageEdit.d.ts",
      "import": "./dist/InPageEdit.js"
    },
    "./components": {
      "types": "./dist/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./models": {
      "types": "./dist/index.d.ts",
      "import": "./dist/models/index.js"
    },
    "./plugins": {
      "types": "./dist/index.d.ts",
      "import": "./dist/plugins/index.js"
    },
    "./services": {
      "types": "./dist/index.d.ts",
      "import": "./dist/services/index.js"
    }
  },
  "sideEffects": [
    "./dist/index.js"
  ],
  "scripts": {
    "start": "zx dev/scripts/setup-dev.ts",
    "dev": "vite",
    "build": "run-p build:import build:bundle && npm run build:types",
    "build:import": "cross-env VITE_BUILD_FORMAT=import vite build",
    "build:bundle": "cross-env VITE_BUILD_FORMAT=bundle vite build",
    "build:types": "rolldown -c rolldown.config.ts",
    "//prepublish": "â†“ This hook ensures we run a build once before we manually publish a package. It won't take effect in the CI environment.",
    "prepublish": "node -e \"process.exit(process.env.CI === 'true' ? 0 : 1)\" || npm run build",
    "lint": "eslint ./src",
    "test": "vitest run ./src",
    "test:watch": "vitest ./src",
    "clean": "rimraf dist/* lib/*",
    "format": "prettier --write ./src",
    "typecheck": "vue-tsc --noEmit --project ./tsconfig.app.json"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@microsoft/api-extractor": "^7.55.2",
    "@prettier/plugin-pug": "^3.4.2",
    "@tabler/icons-vue": "^3.36.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/compiler-sfc": "^3.5.26",
    "@vue/language-plugin-pug": "^3.2.1",
    "cross-env": "^10.1.0",
    "crypto-js": "^4.2.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jsx-dom": "^8.1.6",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.7.4",
    "pug": "^3.0.3",
    "rimraf": "^6.1.2",
    "rolldown": "1.0.0-beta.57",
    "rolldown-plugin-dts": "0.20.0",
    "sass-embedded": "^1.97.1",
    "tsx": "^4.21.0",
    "types-mediawiki": "^2.0.0",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.3.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.1"
  },
  "dependencies": {
    "@cordisjs/core": "^3.18.1",
    "@inpageedit/logger": "^0.1.0",
    "@inpageedit/modal": "workspace:^",
    "idb-plus": "^0.2.0",
    "schemastery": "^3.17.2",
    "schemastery-form": "workspace:^",
    "vue": "^3.5.26",
    "wiki-saikou": "^7.4.1"
  },
  "keywords": [
    "mediawiki",
    "mediawiki-gadget",
    "inpageedit"
  ],
  "homepage": "https://www.ipe.wiki/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inpageedit/inpageedit-next.git"
  },
  "bugs": {
    "url": "https://github.com/inpageedit/inpageedit-next/issues"
  }
}